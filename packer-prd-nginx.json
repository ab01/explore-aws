{
  "builders": [{
    "type": "docker",
    "image": "centos",
    "Commit" : "true"
  }],
  "provisioners" : [
    {
      "type": "shell",
      "inline": ["yum update -y; yum install sudo curl wget -y"]
    },
    {
      "type": "chef-client",
      "ssl_verify_mode": "verify_none",
      "server_url": "https://chef.jnanalab.com/organizations/jnanalab",
      "encrypted_data_bag_secret_path": "/root/chef-repo/cookbooks/nginxscenario/data_bags/encrypted_data_bag_secret",
      "validation_client_name": "jnanalab-validator",
      "validation_key_path": "/root/chef-repo/.chef/jnanalab-validator.pem",
      "install_command": "curl -L https://www.opscode.com/chef/install.sh | bash -s -- -v 12.6.0",
      "chef_environment": "prd",
      "run_list": "role[nginxwebserver]",
      "node_name": "packer_prd_chef"
    }],
    "post-processors" : [
      [
        {
          "type": "docker-tag",
          "repository": "470952299052.dkr.ecr.us-east-1.amazonaws.com/nginx",
          "tag": "0.1"
        },
        {
        "type": "docker-push",
        "ecr_login": true,
        "login_server": "https://470952299052.dkr.ecr.us-east-1.amazonaws.com/nginx"
        }
      ]
    ]
  }
